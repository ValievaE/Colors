<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GreenAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryGreen</item>
        <item name="colorAccent">@color/colorAccentGreen</item>
        <item name="android:textColor">@color/colorPrimaryDarkGreen</item>
        <item name="colorButtonNormal">@color/colorPrimaryGreen</item>
    </style>

    <style name="BlackAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryBlack</item>
        <item name="colorAccent">@color/colorAccentBlack</item>
        <item name="android:textColor">@color/colorPrimaryDarkBlack</item>
        <item name="colorButtonNormal">@color/colorPrimaryBlack</item>
    </style>

    <style name="BlueAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryBlue</item>
        <item name="colorAccent">@color/colorAccentBlue</item>
        <item name="android:textColor">@color/colorPrimaryDarkBlue</item>
        <item name="colorButtonNormal">@color/colorAccentBlue</item>
    </style>


</resources>